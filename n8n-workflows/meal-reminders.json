      "id": "get-today-plan",
      "name": "Get Today Plan",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [460, 300]
    },
    {
      "parameters": {
        "jsCode": "// Filter meals that are due in the next 15 minutes and not done\nconst now = new Date();\nconst currentTime = now.getHours() * 60 + now.getMinutes();\nconst next15min = currentTime + 15;\n\nconst upcomingMeals = $json.mealItems.filter(meal => {\n  const [hours, minutes] = meal.time.split(':').map(Number);\n  const mealTime = hours * 60 + minutes;\n  return mealTime >= currentTime && mealTime <= next15min && !meal.done;\n});\n\nreturn upcomingMeals.map(meal => ({\n  json: {\n    ...meal,\n    goals: $json.goals,\n    dayPlan: $json.dayPlan\n  }\n}));"
      },
      "id": "filter-meals",
      "name": "Filter Upcoming Meals",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-meals",
              "leftValue": "={{ $json.length }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-meals",
